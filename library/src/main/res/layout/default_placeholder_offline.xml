<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/global_keyline_s">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical">

		<cz.kinst.jakub.view.TintableImageView
			android:id="@+id/state_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/ic_offline"
			style="@style/StateImage"/>

		<TextView
			android:id="@+id/state_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/default_placeholder_offline"
			android:textAppearance="@style/TextAppearanceStateDefault"/>

	</LinearLayout>
</FrameLayout>
